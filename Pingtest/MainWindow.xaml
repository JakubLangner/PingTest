<Window x:Class="Pingtest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pingtest"
        mc:Ignorable="d"
        Title="Ping test" Height="450" Width="449">
    <Grid Margin="0,0,2,0">
        <Button x:Name="TestButton" Content="Wysyłaj zapytania PING przez 7 sek." HorizontalAlignment="Left" Margin="205,375,0,0" VerticalAlignment="Top" Width="216" Click="TestButton_Click"/>
        <TextBox x:Name="textbox1" HorizontalAlignment="Left" Height="23" Margin="23,375,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="149"/>
        <Label Content="Adres do testowania PING" HorizontalAlignment="Left" Margin="23,344,0,0" VerticalAlignment="Top" RenderTransformOrigin="-6.408,7.135"/>
        <Label Content="Czas, który upłynął od rozpoczęcia testu PING." HorizontalAlignment="Left" Margin="23,237,0,0" VerticalAlignment="Top"/>
        <ProgressBar x:Name="progressbar1" HorizontalAlignment="Left" Height="22" Margin="23,281,0,0" VerticalAlignment="Top" Width="398" Maximum="7" Minimum="0" />
        <ListBox x:Name="display" HorizontalAlignment="Left" Height="227" Margin="10,10,0,0" VerticalAlignment="Top" Width="411" Background="#FF0C0101" Foreground="Aqua"/>

    </Grid>
</Window>
